    .c-row.c-row--header.navbar-fixed-top
      .o-grid
        .o-grid__item
          .logo-menu(style='width:920px')
            p.c-logo.icon-logo
              a.c-logo__link(href='/cmdb/site/') Atlas Copco
            nav.c-nav-ba
              ul.o-list
                li.c-nav-main-ba__item
                    a.c-nav-main-ba__link(href='/cmdb/site/')
                      span Site Info
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/staff/')
                    span Staff Info
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/adinfo/')
                    span AD User
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/symantec/')
                    span Altiris PC
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/ipt/')
                    span IPT Info
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/airwatch/')
                    span AirWatch
                li.c-nav-main-ba__item
                  a.c-nav-main-ba__link(href='/cmdb/warranty/')
                    span Warranty

          .wrapper-dropdown.dropdown.pull-right
            button#dropdownMenu1.btn.btn-lg.dropdown-toggle(style='margin-top:1px;background-color: #09c;color:#fff', type='button', data-toggle='dropdown')
              | Menu
              span.caret
            ul#drop-menu.dropdown-menu.drop-style(role='menu', aria-labelledby='dropdownMenu1')
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/site/')
                  i &#9729;
                  | Site Info
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/staff/')
                  i &#9786;
                  | Staff Info
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/adinfo/')
                  i &#10070;
                  | AD User
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/symantec/')
                  i &#9853;
                  | Altiris PC
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/ipt/')
                  i &#9743;
                  | IPT Info
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/airwatch/')
                  i &#9993;
                  | AirWatch
              li(role='presentation')
                a(role='menuitem', tabindex='-1', href='/cmdb/warranty/')
                  i &#9730;
                  | Warranty
          .c-nav-ba-aside
            if loggedUser
              span.c-nav-cta User: #{loggedUser}

    .c-row--divider
    block content
    block script
      script(src='https://unpkg.com/bootstrap@3.3.5/dist/js/bootstrap.min.js',type='text/javascript')
      script(src='/public/js/njctrl4.min.js',type='text/javascript')
        
