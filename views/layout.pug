doctype html
html(ng-app="staffApp")
  head
    title ACBSIT NanJing
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    <!--[if gt IE 8]><!-->
    block css
      link(rel='stylesheet', href='/cmdb/css/style.css')
      link(rel='stylesheet', href='https://unpkg.com/bootstrap@3.3.5/dist/css/bootstrap.min.css')
      //-
        link(rel='stylesheet', href='/cmdb/css/bootstrap.min.css')
    block script
      script(src='https://unpkg.com/jquery@1.12.4/dist/jquery.min.js',type='text/javascript')
      script(src='https://unpkg.com/bootstrap@3.3.5/dist/js/bootstrap.min.js',type='text/javascript')
      //-
        script(src='/cmdb/js/jquery.min.js',type='text/javascript')
        script(src='/cmdb/js/bootstrap.min.js',type='text/javascript')
    <!--<![endif]-->

  body
    <!--[if lte IE 8]> Internet Explorer error: "Unfortunately, your browser is too old to work on this website. Please upgrade your browser to the latest version." <![endif]-->
    <!--[if gt IE 8]><!-->
    .c-row.c-row--header.c-row--relative
      .o-grid
        .o-grid__item
          .logo-menu(style='width:920px')
            p.c-logo
              a.c-logo__link(href='/cmdb') Atlas Copco
            nav.c-nav-ba
              ul.o-list.c-nav-main-ba-ba
                li.c-nav-main-ba__item(class={active: currentUrl === '/site/'})
                    a.c-nav-main-ba__link(href='/cmdb/site/') Site Info
                li.c-nav-main-ba__item(class={active: currentUrl === '/staff/'})
                  a.c-nav-main-ba__link(href='/cmdb/staff/') Staff Info
                li.c-nav-main-ba__item(class={active: currentUrl === '/adinfo/'})
                  a.c-nav-main-ba__link(href='/cmdb/adinfo/') AD User
                li.c-nav-main-ba__item(class={active: currentUrl === '/ipt/'})
                  a.c-nav-main-ba__link(href='/cmdb/ipt/') IPT Info
                li.c-nav-main-ba__item(class={active: currentUrl === '/warranty/'})
                  a.c-nav-main-ba__link(href='/cmdb/warranty/') Warranty
                //-
                  li.c-nav-main-ba__item(class={active: currentUrl === '/thinkpad/'})
                    a.c-nav-main-ba__link(href='/cmdb/thinkpad/') Thinkpad Warranty
          .c-nav-ba-aside
            if loggedUser
              span.c-nav-cta.c-nav-cta--global User: #{loggedUser}
    .c-row.c-row--divider
    block content
    block footer
      div(style={position:"fixed",left:"10px",bottom:"5px"})
        |Powered by ACBSIT, Naning, China&nbsp;&copy; 2016-2018 Edmon Jiang
    <!--<![endif]-->