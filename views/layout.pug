doctype html
html(ng-app="staffApp")
  head
    title ACBSIT NanJing
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    <!--[if gt IE 8]><!-->
    block css
      link(rel='stylesheet', href='/cmdb/css/style.css')
      link(rel='stylesheet', href='//unpkg.com/bootstrap@3.3.5/dist/css/bootstrap.min.css')
      //-
        link(rel='stylesheet', href='/cmdb/css/bootstrap.min.css')
    block script
      script(src='//unpkg.com/jquery@1.12.4/dist/jquery.min.js',type='text/javascript')
      script(src='//unpkg.com/bootstrap@3.3.5/dist/js/bootstrap.min.js',type='text/javascript')
      //-
        script(src='/cmdb/js/jquery.min.js',type='text/javascript')
        script(src='/cmdb/js/bootstrap.min.js',type='text/javascript')
