doctype html
html(ng-app="staffApp")
  head
    title ACBSIT NanJing
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block css
      link(rel='stylesheet', href='/cmdb/css/style.css')
      link(rel='stylesheet', href='/cmdb/css/bootstrap.min.css')
    block script
      script(src='/cmdb/js/jquery.min.js',type='text/javascript')
      script(src='/cmdb/js/bootstrap.min.js',type='text/javascript')
    style.
      body { font: 13px Helvetica, Arial; }

  body
    ul.nav.nav-tabs
      li(role='presentation',class={active: currentUrl === '/'})
          a(href='/cmdb')
              span.glyphicon.glyphicon-globe
              |&nbsp;Site Info
      li(role='presentation',class={active: currentUrl === '/staff/'})
          a(href='/cmdb/staff/')
              span.glyphicon.glyphicon-user
              |&nbsp;Staff Info
      .loguser-text.pull-right
        if loggedUser
            li
                span= loggedUser
    block content