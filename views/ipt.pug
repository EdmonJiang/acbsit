extends layout

append script
      script(src='/cmdb/js/angular.min.js',type='text/javascript')
      script(src='/cmdb/js/angular-sanitize.min.js',type='text/javascript')
      
block content
  .container(ng-controller="iptCtrl")
    h1 IPT Information Query
    br
    br
    form#site-form.clearfix.form-horizontal(ng-submit="submitInfo()")
      div
        label.col-sm-2.control-label(for='qword') Search:
        .col-sm-6.search-box
          input#qword.form-control(type='text' name="email" ng-disabled="searching" ng-model="email" placeholder="firstname.lastname or firstname.lastname@xx.atlascopco.com" autofocus)
        .col-sm-4
          h5(ng-class="errMsg.class" ng-bind="errMsg.text")

    #siteinfo.info-box(style={overflow:'scroll', 'margin-bottom':'25px'} ng-show="userInfo")
      div(ng-bind-html="userInfo")

  script(src='/cmdb/js/iptctrl.js',type='text/javascript')